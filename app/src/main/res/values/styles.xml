<resources>
    <style name="MaterialCalendarNoSelectionTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">#000000</item>
    </style>

<!--common widget styles-->
    <style name="AppBar" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">?attr/appColorSecondarySurface</item>
    </style>

    <style name="ToolBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/AppTextAppearance.ToolBarTitle</item>
    </style>

    <style name="OverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/appColorOnSecondarySurface</item>
    </style>

    <style name="AppCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorPrimarySurface</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="drawableTint">?attr/colorOnSecondary</item>
    </style>

    <style name="CapsuleShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="AppButton.Capsule">
        <item name="shapeAppearanceOverlay">@style/CapsuleShapeAppearance</item>
    </style>

    <style name="AppTextView" parent="Widget.MaterialComponents.TextView"/>

    <style name="AppBottomNav" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/bottom_nav_item_clr</item>
        <item name="itemTextColor">@color/bottom_nav_item_clr</item>
        <item name="backgroundTint">?attr/appColorSecondarySurface</item>
    </style>

<!--text appearances-->
    <!--base text appearance-->
    <style name="AppTextAppearance" parent="TextAppearance.AppCompat.Small"/>

    <style name="AppTextAppearance.ToolBarTitle">
        <item name="android:textColor">?attr/appColorOnSecondarySurface</item>
        <item name="android:textSize">18sp</item>
    </style>


</resources>