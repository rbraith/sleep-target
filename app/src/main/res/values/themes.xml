<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="appBarLayoutStyle">@style/AppBar</item>
        <item name="toolbarStyle">@style/ToolBar</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButton</item>
        <item name="cardViewStyle">@style/AppCardView</item>
        <item name="bottomNavigationStyle">@style/AppBottomNav</item>

        <item name="android:windowBackground">?attr/appColorBackground</item>

<!--        component defaults-->
<!--        common_interruptions.xml-->
        <!-- REFACTOR [21-07-28 2:52AM] these values should be contained in a default style value. -->
        <item name="interruptionsRecyclerMaxHeight">200dp</item>
        <item name="interruptionsListItem">@layout/common_interruptions_listitem</item>

        <item name="datetimeComponentStyle">@style/DefaultDateTimeComponentStyle</item>
    </style>


    <style name="AppTheme.DefaultColors">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="appColorTriadic2">@color/colorTriadic2</item>
        <item name="appColorTriadic3">@color/colorTriadic3</item>

        <item name="appColorComplementary">@color/colorComplementary</item>

        <item name="colorPrimarySurface">@color/colorPrimarySurface</item>
        <item name="colorOnPrimarySurface">@color/colorOnPrimarySurface</item>
        <item name="appColorOnPrimarySurface2">@color/colorOnPrimarySurface2</item>

        <item name="appColorSecondarySurface">@color/colorSecondarySurface</item>
        <item name="appColorOnSecondarySurface">@color/colorOnSecondarySurface</item>

        <item name="appColorBackground">@color/colorAppBackground</item>

        <item name="colorBackgroundFloating">@color/colorBackgroundFloating</item>
        <item name="appColorOnBackgroundFloating">@color/colorOnPrimarySurface</item>
        <item name="appColorOnBackgroundFloating2">@color/colorOnPrimarySurface2</item>
        <item name="appColorSurfaceFloating">@color/colorSurfaceFloating</item>

        <item name="appDialogTitleIconColor">?attr/colorSecondary</item>

        <item name="appColorInterruption">@color/colorInterruption</item>
        <item name="appColorInterruptionDark">@color/colorInterruptionDark</item>
        
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>

        <item name="android:textColorLink">@color/colorLinks</item>

        <item name="appTargetDurationColor">?attr/appColorTriadic2</item>
        <item name="appTargetWakeTimeColor">?attr/appColorTriadic3</item>
    </style>

</resources>