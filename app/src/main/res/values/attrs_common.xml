<resources>
    <declare-styleable name="Interruptions">
        <attr name="interruptionsRecyclerMaxHeight" format="dimension"/>
        <attr name="interruptionsListItem" format="reference"/>
    </declare-styleable>

    <declare-styleable name="MoodSelectorComponent">
        <attr name="moodSelectorTitleStyle" format="reference"/>
        <attr name="moodSelectorAddButtonStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="TagSelectorComponent">
        <attr name="tagSelectorTitleStyle" format="reference"/>
        <attr name="tagSelectorAddButtonStyle" format="reference"/>
        <attr name="tagSelectorTagStyle" format="reference"/>
        <attr name="tagSelectorNoTagsMessageStyle" format="reference"/>
        <attr name="tagSelectorDialogTheme" format="reference"/>
    </declare-styleable>

    <declare-styleable name="TagSelectorDialog">
        <attr name="tagSelectorListItemCardStyle" format="reference"/>
        <attr name="tagSelectorListItemTextStyle" format="reference"/>
        <attr name="tagSelectorListItemDeleteButtonStyle" format="reference"/>
        <attr name="tagSelectorListItemEditButtonStyle" format="reference"/>
        <attr name="tagSelectorListItemEditTextStyle" format="reference"/>
        <attr name="tagSelectorListItemSelectedColor" format="color"/>
        <!-- HACK [21-05-26 8:24PM] - Ideally it would be better to extract the colour from
                tagSelectorListItemCardStyle but I had trouble with that. -->
        <attr name="tagSelectorListItemUnselectedColor" format="color"/>
        <attr name="tagSelectorListAddTagButtonStyle" format="reference"/>
        <attr name="tagSelectorListAddTagEditTextStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="VerticalTextView">
        <attr name="direction" format="enum">
            <enum name="downwards" value="0"/>
            <enum name="upwards" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="MoodView">
        <attr name="mood" format="integer"/>
    </declare-styleable>

    <declare-styleable name="DateTimeComponent">
        <!-- REFACTOR [21-07-28 2:51AM] give other views/components style attrs and default styles. -->
        <attr name="datetimeComponentStyle" format="reference"/>
        <attr name="datetimeValuesColor" format="color"/>
        <attr name="datetimeNameColor" format="color"/>
    </declare-styleable>
</resources>