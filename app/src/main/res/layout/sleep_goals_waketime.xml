<?xml version="1.0" encoding="utf-8"?>
<!-- REFACTOR [21-08-6 5:29PM] this layout duplicates sleep_goals_duration.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/waketime_value"
        style="@style/SleepGoalsWakeTimeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="8:00 a.m." />

    <Button
        android:id="@+id/waketime_edit_btn"
        style="@style/SleepGoalsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Edit"
        app:icon="@drawable/ic_baseline_edit_24"
        app:layout_constraintEnd_toStartOf="@+id/waketime_delete_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/waketime_value" />

    <Button
        android:id="@+id/waketime_delete_btn"
        style="@style/SleepGoalsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:icon="@drawable/ic_baseline_delete_forever_24"
        app:layout_constraintBottom_toBottomOf="@+id/waketime_edit_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/waketime_edit_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>