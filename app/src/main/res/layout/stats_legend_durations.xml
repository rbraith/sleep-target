<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/stats_durations_legend_bar_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:tint="?attr/colorPrimaryDark"
        app:layout_constraintEnd_toStartOf="@+id/stats_durations_legend_bar_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_stats_legend_bar_24" />

    <ImageView
        android:id="@+id/stats_durations_legend_rating_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:tint="?attr/colorSecondary"
        app:layout_constraintStart_toStartOf="@+id/stats_durations_legend_bar_icon"
        app:layout_constraintTop_toBottomOf="@+id/stats_durations_legend_bar_icon"
        app:srcCompat="@drawable/ic_stats_legend_rating_24" />

    <ImageView
        android:id="@+id/stats_durations_legend_target_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="50dp"
        android:tint="?attr/appColorTriadic2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/stats_durations_legend_rating_icon"
        app:layout_constraintTop_toBottomOf="@+id/stats_durations_legend_rating_icon"
        app:srcCompat="@drawable/ic_stats_legend_line_24" />

    <TextView
        android:id="@+id/stats_durations_legend_bar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Sleep Duration"
        app:layout_constraintBottom_toBottomOf="@+id/stats_durations_legend_bar_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/stats_durations_legend_bar_icon"
        app:layout_constraintTop_toTopOf="@+id/stats_durations_legend_bar_icon" />

    <TextView
        android:id="@+id/stats_durations_legend_rating_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sleep Rating"
        app:layout_constraintBottom_toBottomOf="@+id/stats_durations_legend_rating_icon"
        app:layout_constraintStart_toStartOf="@+id/stats_durations_legend_bar_text"
        app:layout_constraintTop_toTopOf="@+id/stats_durations_legend_rating_icon" />

    <TextView
        android:id="@+id/stats_durations_legend_target_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target Sleep Duration"
        app:layout_constraintBottom_toBottomOf="@+id/stats_durations_legend_target_icon"
        app:layout_constraintStart_toStartOf="@+id/stats_durations_legend_rating_text"
        app:layout_constraintTop_toTopOf="@+id/stats_durations_legend_target_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>