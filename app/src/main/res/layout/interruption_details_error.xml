<!-- REFACTOR [21-07-31 4:18PM] This duplicates session_details_overlap_error.xml. -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/interruption_details_error_start_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:text="start:"
        android:textColor="?attr/colorOnPrimarySurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/interruption_details_error_message" />

    <TextView
        android:id="@+id/interruption_details_error_end_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:text="end:"
        android:textColor="?attr/colorOnPrimarySurface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/interruption_details_error_start_text"
        app:layout_constraintTop_toBottomOf="@+id/interruption_details_error_start_text" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/interruption_details_error_session_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="interruption_details_error_end_text,interruption_details_error_start_text"
        tools:layout_editor_absoluteX="411dp" />

    <TextView
        android:id="@+id/interruption_details_error_start_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:text="Error"
        android:textColor="?attr/colorSecondary"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/interruption_details_error_start_text"
        app:layout_constraintStart_toEndOf="@+id/interruption_details_error_session_barrier" />

    <TextView
        android:id="@+id/interruption_details_error_end_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:text="Error"
        android:textColor="?attr/colorSecondary"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/interruption_details_error_end_text"
        app:layout_constraintStart_toEndOf="@+id/interruption_details_error_session_barrier" />

    <TextView
        android:id="@+id/interruption_details_error_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="Error"
        android:textColor="?attr/colorOnPrimarySurface"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>